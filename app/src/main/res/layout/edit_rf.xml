<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:divider="@drawable/divider"
    android:dividerPadding="5dip"
    android:showDividers="middle"
    android:layout_margin="5dp"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/titleL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit RF:"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
         <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            


        </TableRow>
        <TableRow
            android:id="@+id/nameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nameL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="15sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="20"
                android:textColor="#000"
                android:layout_weight="1"
                android:theme="@style/AppTheme"
                android:textSize="15sp" />
            
        </TableRow>

        <TableRow
            android:id="@+id/typeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/typeL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textSize="15sp"
                android:textColor="#000" />
            <Spinner
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </TableRow>

        <TableRow
            android:id="@+id/codeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
             <TextView
                 android:id="@+id/codeL"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Code: "
                 android:textSize="15sp"
                android:textColor="#000"  />

            <EditText
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#000"
                android:digits="0123456789"
                android:inputType="number"
                android:theme="@style/AppTheme"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/pulseRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/pulseL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulse length: "
                android:textSize="15sp"
                android:textColor="#000"  />

            <EditText
                android:id="@+id/pulse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#000"
                android:digits="0123456789"
                android:text="350"
                android:inputType="number"
                android:theme="@style/AppTheme"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/protocolRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/protocolL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protocol: "
                android:textSize="15sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/protocol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="20"
                android:textColor="#000"
                android:digits="12345"
                android:text="1"
                android:inputType="number"
                android:layout_weight="1"
                android:theme="@style/AppTheme"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:id="@+id/repeatTRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/repeatTL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeat transmit: "
                android:textSize="15sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/repeatT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="20"
                android:inputType="number"
                android:text="10"
                android:textColor="#000"
                android:layout_weight="1"
                android:theme="@style/AppTheme"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:id="@+id/bitLengthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/bitLengthL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bit length: "
                android:textSize="15sp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/bitLength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textColor="#000"
                android:text="24"
                android:layout_weight="1"
                android:theme="@style/AppTheme"
                android:textSize="15sp" />

        </TableRow>



       
    </TableLayout>

</LinearLayout>
</ScrollView>